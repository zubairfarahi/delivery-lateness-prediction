# ============================================================================
# Data Configuration
# ============================================================================
DATA__DATA_PATH=data/delivery_trips.csv
DATA__PROCESSED_DIR=data/processed
DATA__TEST_SIZE=0.2
DATA__RANDOM_STATE=42

# ============================================================================
# Model Configuration
# ============================================================================
MODEL__MODEL_NAME=xgboost_late_delivery
MODEL__CV_FOLDS=5
MODEL__CV_STRATEGY=stratified
MODEL__HANDLE_IMBALANCE=true

# XGBoost hyperparameters (defaults, will be tuned by Optuna)
MODEL__MAX_DEPTH=6
MODEL__LEARNING_RATE=0.1
MODEL__N_ESTIMATORS=100
MODEL__MIN_CHILD_WEIGHT=1
MODEL__SUBSAMPLE=0.8
MODEL__COLSAMPLE_BYTREE=0.8
MODEL__GAMMA=0.0
MODEL__REG_ALPHA=0.0
MODEL__REG_LAMBDA=1.0

# ============================================================================
# Optuna Configuration
# ============================================================================
OPTUNA__N_TRIALS=50
OPTUNA__TIMEOUT=3600
OPTUNA__DIRECTION=maximize
OPTUNA__METRIC=roc_auc

# ============================================================================
# Evaluation Configuration
# ============================================================================
EVALUATION__ACCURACY_THRESHOLD=0.75
EVALUATION__PRIMARY_METRIC=roc_auc

# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW__TRACKING_URI=file:./mlruns
MLFLOW__EXPERIMENT_NAME=delivery_lateness_prediction
MLFLOW__MODEL_REGISTRY_NAME=delivery_late_classifier

# ============================================================================
# API Configuration
# ============================================================================
API__HOST=0.0.0.0
API__PORT=8000
API__RELOAD=false
API__WORKERS=1
API__MODEL_ALIAS=champion

# ============================================================================
# Logging Configuration
# ============================================================================
LOGGING__LEVEL=INFO
LOGGING__LOG_DIR=logs
LOGGING__ROTATION=10 MB
LOGGING__RETENTION=1 week
